<h1>Users#edit</h1>
<%= form_with model: @user,url: user_path(@user.id), method: :patch do |f| %>

<%= f.label "名前" %>
<%= f.text_field :name %>

<%= f.label "プロフィール画像" %>
<%= f.file_field :profile_image %>

<%= f.label "プロフィール" %>
<%= f.text_area :profile %>

<%= f.submit "編集する" %>

<% end %>
<%= link_to "退会する", users_confirm_path %>
