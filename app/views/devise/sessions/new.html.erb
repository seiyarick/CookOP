
<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
    <h2 class="text-center my-4">ログイン</h2>
      <%= form_with model: @user, url: session_path(resource_name) do |f| %>
        <div class="row mb-5">
        <%= f.label :名前, class:"col-4 col-form-label text-center" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-8 form-control", placeholder:"名前を入力してください" %>
        </div>
        <div class="row mb-3">
          <div class="col-4 text-center">
          <i class="fa-solid fa-key"></i><%= f.label :パスワード %><br />
          </div>
          <%= f.password_field :password, autocomplete: "current-password", class:"col-8 form-control", placeholder:"パスワードを入力してください" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="row mb-3">
            <div class="col-12 text-right">
            <%= f.check_box :remember_me %>
            <%= f.label :パスワードを保存する %>
            </div>
          </div>
        <% end %>
        <div class="row">
          <div class="mx-auto">
          <%= f.submit "ログインする",class:"btn btn-light"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%#= render "devise/shared/links" %>
