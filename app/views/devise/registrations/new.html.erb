<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
    <h1 class="text-center my-5">新規登録</h1>
    <%= form_with model: @user, url: registration_path(resource_name) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
          <div class="row mb-5">
          <%= f.label :名前, class:"col-4 col-form-label text-center" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-8 form-control", placeholder:"名前を入力してください" %>
          </div>



          <div class="row mb-5">
          <%= f.label "email", class:"col-4 col-form-label text-center" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-8 form-control", placeholder:"メールアドレスを入力してください" %>
          </div>


          <div class="row mb-5">
            <div class="col-4 text-center col-form-label">
            <i class="fa-solid fa-key"></i><%= f.label "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            </div>
            <%= f.password_field :password, autocomplete: "new-password", class:"col-8 form-control", placeholder:"パスワードを入力してください" %>
          </div>

          <div class="row mb-5">
            <div class="col-4 text-center col-form-label">
            <%= f.label "パスワード確認" %><br />
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-8 form-control", placeholder:"再度パスワードを入力してください" %>
          </div>

        <% if devise_mapping.rememberable? %>
          <div class="row mb-5">
            <div class="col-12 text-right">
            <%= f.check_box :remember_me %>
            <%= f.label "パスワードを保存する" %>
            </div>
          </div>
        <% end %>

        <div class="row">
          <div class="mx-auto">
          <%= f.submit "新規登録する",class:"btn btn-light"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
